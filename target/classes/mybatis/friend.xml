<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="friend.model.FriendDao">
	
	<!-- 나의 친구 리스트 -->
	<select id="GetMyFriends" resultType="MyFriend">
		select * from friends where fno=#{no}
	</select>
	
	<!-- 나에게 친구 추가 -->
	<update id="UpdateFriendsList">
		update friends set friends_no=#{friends_no} where fno=#{fno}
	</update>
	
	<insert id="InsertFriend">
		insert into friends(fno,friends_no) values(#{fno},#{friends_no})
	</insert>

</mapper>